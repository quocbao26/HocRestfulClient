<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.hocrestfulclient.DanhSachSanPhamTheoDonGiaActivity">

    <TextView
        android:textSize="24sp"
        android:text="Đơn giá MIN:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtGiaMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="24sp"
        android:text="Đơn giá MAX:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtGiaMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnXemDSSPDonGia"
        android:text="Xem danh sách sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lvDSSPTheoDonGia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
